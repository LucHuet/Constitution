{% extends 'base.html.twig' %}

{% block title %}Partie{% endblock %}

{% block body %}

      <div class="js-acteur-table">
        <h2>Partie en cours</h2>
        <table class="table js-acteur-table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Nb Individus</th>
                    <th>Actions</th>
                    <th>Pouvoirs de l'acteur</th>
                    <th>Désigné par</th>
                    <th>Force</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <br>
        <!-- Appel de la modal d'ajout -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ajoutActeurModal">
          Ajouter un acteur
        </button>

        <br>

        {{ include('partie/_modal.html.twig') }}
      </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/sweetalert2/6.1.1/sweetalert2.min.css">
{% endblock %}

{% block javascripts %}

  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/sweetalert2/6.1.1/sweetalert2.min.js"></script>
  <script src="{{ asset('assets/js/ActeurApp.js') }}"></script>


</script>

  <script>
    $(document).ready(function() {
      var $wrapper = $('.js-acteur-table');

      var acteurApp = new ActeurApp($wrapper);
    });
  </script>

  <script type="text/template" id="js-acteur-row-template">
    <tr>
        <td><%= nom %></td>
        <td><%= nombreIndividus %></td>
        <td>
        </td>
        <td>
        </td>
        <td></td>
        <td>
          <a href="#"
            class="js-delete-acteur"
            data-url="<%= links._self %>"
          >
            <span class="fa fa-trash"></span>
          </a>
        </td>
    </tr>
  </script>

{% endblock %}
