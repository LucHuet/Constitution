{% extends 'base.html.twig' %}

{% block title %}Votre profile{% endblock %}

{% block body %}
  <div class="user">
    <div class="ui centered card">
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="image">
            {% if user.image is not null %}
              <img src="{{ vich_uploader_asset(user.image, 'imageFile') }}">
            {% endif %}
        </div>
        <div class="content">
          <a class="center aligned header">
            {{ app.user.username }}
          </a>
        </div>
        {% endif %}
    </div>

    {{ form_start(form) }}
      {{ form_widget(form) }}
      <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}



  </div>
{% endblock %}
