{% extends 'base.html.twig' %}

{% block title %}Votre profile{% endblock %}

{% block body %}
  <div class="user">

    <h2>Votre profile</h2>

    <h3>Nom d'utilisateur :
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        {{ app.user.username }}

      {% endif %}</h3>

    <h3>Photo de profile</h3>

    {% for image in user.images %}
    <img src="{{ vich_uploader_asset(image, 'imageFile') }}">
    {% endfor %}

    {{ form_start(form) }}
      {{ form_widget(form) }}
      <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}



  </div>
{% endblock %}
