{% extends 'base.html.twig' %}

{% block body %}
{# templates/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="ui raised very padded text container segment">
  <h2 class="ui header">Se connecter</h2>
  <div class="ui form">
    <div class="fields">
      <form action="{{ path('login') }}" method="post">
        <div class="field">
          <label for="username">Username:</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" />

        </div>
        <div class="field">
          <label for="password">Password:</label>
          <input type="password" id="password" name="_password" />

        </div>
        <div class="field">
          <input type="checkbox" id="remember_me" name="_remember_me" checked />
          <label for="remember_me">Rester connecté</label>
        </div>
        <br>
        <button type="submit" class="ui basic button">
          <i class="icon sign-in"></i>
             <class="button">Se connecter
        </button>

          <h3 class="ui header login-sous-item">Vous n'êtes pas encore enregistré ? </h3>
          <p>
            <a href="{{ path('user_registration') }}">
              <button class="ui basic button">
                <i class="icon edit"></i>
                S'enregistrer
              </button>
            </a>
          </p>
      </form>
    </div>
  </div>
</div>
{% endblock %}
