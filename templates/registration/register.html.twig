{% extends 'base.html.twig' %}

{# templates/registration/register.html.twig #}
{% block body %}
<div class="ui raised very padded text container segment">
  <h2 class="ui header">S'enregistrer</h2>
  <div class="ui form">
    <div class="fields">
      {{ form_start(form) }}
      <div class="field">
          {{ form_row(form.username) }}
      </div>
      <div class="field">
          {{ form_row(form.email) }}
      </div>
      <div class="field">
          {{ form_row(form.plainPassword.first) }}
      </div>
      <div class="field">
          {{ form_row(form.plainPassword.second) }}
      </div>
      <br>
        <button type="submit" class="ui basic button">
          <i class="icon edit"></i>
          S'enregistrer
        </button>
      {{ form_end(form) }}
    </div>
  </div>
</div>

{% endblock %}
